{
  "name": "sigmaitc.github.io",
  "version": "1.0.0",
  "description": "Main site for Sigma IT Consulting open source project",
  "main": "index.html",
  "browserslist": [
    "ie >= 9",
    "> 1%",
    "last 2 versions"
  ],
  "config": {
    "pre-git": {
      "commit-msg": "",
      "pre-commit": [],
      "pre-push": "npm test",
      "post-commit": "git status",
      "post-checkout": [],
      "post-merge": "yarn"
    }
  },
  "scripts": {
    "build:scss": "node-sass --output-style expanded sass/main.scss css/main.css",
    "build:css": "run-s build:scss && postcss -u autoprefixer -u postcss-discard-empty -u cssnano -c postcss.config.js -o css/main.css css/main.css",
    "build": "run-s build:css",
    "commit": "commit-wizard",
    "lint:css": "stylelint sass/**/*.scss",
    "lint:js": "eslint . --ext .js --ext .json --ignore-path .gitignore",
    "lint:yaml": "yamllint .travis.yml **/*.yml **/**/*.yml",
    "test": "run-s lint:*",
    "upgrade": "updtr --save-exact"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SigmaITM/sigmaitm.github.io.git"
  },
  "author": "Sigma IT Consulting",
  "contributors": [
    "Chris Sundberg <chris.sundberg@sigma.se>"
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/SigmaITM/sigmaitm.github.io/issues"
  },
  "homepage": "https://github.com/SigmaITM/sigmaitm.github.io#readme",
  "devDependencies": {
    "autoprefixer": "6.6.1",
    "cssnano": "3.10.0",
    "eslint": "3.14.0",
    "eslint-plugin-json": "1.2.0",
    "node-sass": "4.3.0",
    "npm-run-all": "4.0.1",
    "pixrem": "3.0.2",
    "postcss": "5.2.11",
    "postcss-cli": "2.6.0",
    "postcss-discard-empty": "2.1.0",
    "pre-git": "3.12.0",
    "stylelint": "7.7.1",
    "stylelint-scss": "1.4.1",
    "updtr": "0.2.3",
    "yaml-lint": "0.0.4"
  }
}